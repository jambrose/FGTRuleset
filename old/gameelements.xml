<root>
	<distance>
		<base>5</base>
		<diagmult>1</diagmult>
		<suffix>'</suffix>
	</distance>

	<die name="d100">
		<icon>d10icon</icon>
	</die>

	<die name="dmdie">
		<icon>dmdieicon</icon>
	</die>

	<customdie name="d2">
	<model>d4</model>
	<menuicon>customdice</menuicon>
	<script>
	  function onValue(result)
		return math.ceil(result/2);
	  end
	</script>
	</customdie>

	<customdie name="d3">
	<model>d6</model>
	<menuicon>customdice</menuicon>
	<script>
	  function onValue(result)
		return math.ceil(result/2);
	  end
	</script>
	</customdie>

	<customdie name="m6">
	<model>d6</model>
	<menuicon>customdice</menuicon>
	<script>
	  function onValue(result)
		return -result;
	  end
	</script>
	</customdie>
	
	<hotkeybar>
		<title frame="hotkeytitlebox" frameoffset="2,-2,5,2" margin="2,5" font="hotkey" />
	</hotkeybar>
</root>